@model JqueryDataTablesWithPopupInputForm.Models.Employee
    @using (Html.BeginForm("Save", "home", FormMethod.Post, new { id = "popupForm" }))
    {

        <div class="form-horizontal">
            @if (Model != null && Model.EmployeeId > 0)
            {
                @Html.HiddenFor(a => a.EmployeeId)
            }

            <div class="form-group">
                <label class="col-md-3">First Name</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.FirstName)
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3">Last Name</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.LastName)
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3">Email</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Email)
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3">City Name</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(a => a.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.City)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3">Country</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(a => a.Country, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Country)
                </div>
            </div>

            @*<div class="ui-dialog-titlebar ui-corner-all ui-widget-header ui-helper-clearfix text-center" style="padding: 5px 0px">
                <button id="cancelButton" class="btn btn-danger" type="button">Cancel</button>
                <input class="btn btn-success" type="submit" value="Sbmit" />
            </div>*@
        </div>

    }
